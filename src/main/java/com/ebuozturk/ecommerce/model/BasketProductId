package com.ebuozturk.ecommerce.model;

import javax.persistence.Embeddable;
import javax.persistence.IdClass;
import java.io.Serializable;
import java.util.Objects;

@Embeddable
public class BasketProductId implements Serializable {
    private Long basketId;
    private Long productId;

    public BasketProductId() {
    }

    public BasketProductId(Long basketId, Long productId) {
        this.basketId = basketId;
        this.productId = productId;
    }

    public Long getBasketId() {
        return basketId;
    }

    public void setBasketId(Long basketId) {
        this.basketId = basketId;
    }

    @Override
    public boolean equals(Object o) {
        if (this == o) return true;
        if (o == null || getClass() != o.getClass()) return false;
        BasketProductId that = (BasketProductId) o;
        return Objects.equals(basketId, that.basketId) &&
                Objects.equals(productId, that.productId);
    }

    @Override
    public int hashCode() {
        return Objects.hash(basketId, productId);
    }

    public Long getProductId() {
        return productId;
    }

    public void setProductId(Long productId) {
        this.productId = productId;
    }
}
